URxvt*font:		xft:Hack:size=13,xft:Noto Mono for Powerline:size=13,xft:Symbola:size=13,xft:Noto Color Emoji:size=13
!URxvt.boldFont:		xft:Hack:size=13:bold,xft:Symbola:size=13
Xft.rgba: rgb
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.cursor: 15
Xft.dpi: 120
!Xft.dpi: 92
Xft.autohint: 0
Xft.lcdfilter:  lcddefault

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C
!URxvt.keysym.Control-l:      echo -ne '\\033c'\n

URxvt*saveLines:              10000

URxvt.perl-ext-common: default,matcher,keyboard-select,resize-font,selection-to-clipboard
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!URxvt.matcher.button: 1
!URxvt.url.launcher: /usr/bin/google-chrome-stable
URxvt.insecure: false

URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true
URxvt*scrollBar:	    false


!font-resize
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger

!Copy/paste commands
URxvt.iso14755: False
URxvt.iso14755_52: false
!URxvt.keysym.Shift-Control-C: perl:clipboard:copy
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste

!URxvt.tabbed.new-button: false
!URxvt.tabbed.autohide: true
!URxvt.tabbed.no-tabbedex-keys: true
!URxvt.keysym.Control-t: perl:tabbedex:new_tab
!URxvt.keysym.Control-Tab: perl:tabbedex:next_tab
!URxvt.keysym.Control-Shift-Tab: perl:tabbedex:prev_tab

